@model IEnumerable<Solforb.Models.Provider>


<h3>Список поставщиков</h3>

<p>
    <a  asp-action="Create" type="button" class="btn btn-primary ">Добавить</a>
</p>
<div class="text-center border shadow p-3 mb-4 mt-3 rounded">
    <table class="table table-hover">
        <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Название поставщика</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr scope="row">
                    <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                    <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                    <td class="align-middle">
                        <a class="btn btn-danger link-light " asp-action="Del" asp-route-id="@item.Id">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </a>
                    </td>
            </tr>
        }
        </tbody>
    </table>
</div>
